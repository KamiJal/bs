<Page x:Class="WpfBookShop.Pages.ListUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfBookShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ListUsers">

    <Grid>
        <ListView>
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="USER ID" 
                                        DisplayMemberBinding="{Binding Path=UserId}"/>
                        <GridViewColumn Header="LOGIN" 
                                        DisplayMemberBinding="{Binding Path=login}"/>
                        <GridViewColumn Header="NAME" 
                                        DisplayMemberBinding="{Binding Path=lname}"/>
                        <GridViewColumn Header="FIRST" 
                                        DisplayMemberBinding="{Binding Path=fname}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
